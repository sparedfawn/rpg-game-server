<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="6" author="Patryk Klej">
        <createTable tableName="opponent">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar">
            </column>
            <column name="strength" type="int">
            </column>
            <column name="dexterity" type="int">
            </column>
            <column name="luck" type="int">
            </column>
            <column name="armor" type="int">
            </column>
            <column name="health" type="int">
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>